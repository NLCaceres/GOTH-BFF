package view

templ head(title string) {
	<head>
		<title>{ title }</title>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	</head>
}

templ footer() {
	<footer></footer>
}

templ HTMLIndex(contents templ.Component, title string) {
	@head(title)
	<body>
		<main>
			@contents
		</main>
		@footer()
	</body>
}
